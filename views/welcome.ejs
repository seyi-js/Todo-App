<script type="text/javascript" src="/static/js/javascript.js"></script>
		<title>
			TO-DO APP
		</title>
	</head>
	<body>
		<div id="container">
		<h1>ToDO App</h1>

		<form id="todo_form" action="/add_todo" method="POST">

<input type='text' name='item' placeholder="ADD TODO"/>
      <button type="submit" class="btn">
                    Add Todo
                </button>


</form>

	</div>
	<div>
		<% for(var i = 0; i < todoList.length; i++) { %>
		<ul>
			<li id="<%=i%>"> <%= todoList[i].todos %>
				<a href="/delete?todo=<%=i%>" class='remove' >
				 <i class="fa fa-remove" style="font-size:10px;color:blue"></i>
				</a>
			</li>
		</ul>
	<% } %>
	</div>
	</body>
